<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :event_name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :start_date %>
    <%= f.date_field :start_date %>
  </div>

  <div class="field">
    <%= f.label :end_date %>
    <%= f.date_field :end_date %>
  </div>

  <div class="field">
    <%= f.label :start_time %>
    <%= f.time_select :start_time %>
  </div>

  <div class="field">
    <%= f.label :duration_in_hours%>
    <%= f.number_field :duration, :step => 0.01  %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :vacancy %>
    <%= f.number_field :vacancy %>
  </div>

  <div class="field">
    <%= f.label :education_level_id %></br>
    <%= select("education_level_id", "description", EducationLevel.all.collect {|p| [ p.description, p.id ] }, {prompt: 'Select Educational Level'}) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
