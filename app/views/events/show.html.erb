<h1><%= @event.name %></h1>

<div class="ui grid stackable">

  <div class="four wide column apple">
    <% if current_user.usertype == 2 %>
    <%= render "events/eventsendforapproval" %>
    <% end %>
    <%= render "events/edittemplatebar" %>
    <% if current_user.usertype == 4 %>
    <%= render "events/eventapproval" %>
    <% end %>
  </div>

  <div class="twelve wide column apple" id="taskListInput">

    <% if [2,3,4].include? current_user.usertype %>
    <% if current_user.usertype == 2 %>
    <%= render "events/schooleventsshow" %>
    <% elsif current_user.usertype == 3 %>
    <%= render "events/studenteventsshow" %>
    <% else current_user.usertype == 4 %>
    <%= render "events/ngoeventsshow" %>
    <% end %>
    <% end %>
  </div>
</div>
