<!-- MODALS -->
<!-- EDIT PROFILE -->
<div class="ui modal" id="editingProfile">
  <div class="header">
    Edit Profile
  </div>
  <div class="content">
    <%= form_for (@user), html: { class: "ui form", role: "form" } do |f| %>
      <div class="field">
        <%= f.label :first_name %></br>
        <%= f.text_field :first_name, placeholder: @user.first_name %>
      </div>

      <div class="field">
        <%= f.label :last_name %></br>
        <%= f.text_field :last_name, placeholder: @user.last_name %>
      </div>

      <div class="field">
        <%= f.label :email %></br>
        <%= f.text_field :email, placeholder: @user.email%>
      </div>
    </div>
    <div class="actions">
      <%= f.submit class: "ui yellow button"%>
    </div>
  <%end %>
</div>

<!-- ADDING EVENT -->
<div class="ui modal" id="addingEvent">
  <div class="header">
    Add Event
  </div>
  <div class="content">
    <% @event = Event.new %>
    <%= form_for (@event), html: { class: "ui form", role: "form" } do |f| %>
      <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
          <ul>
          <% event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :event_name %>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :start_date %>
        <%= f.date_field :start_date %>
      </div>
      <div class="field">
        <%= f.label :end_date %>
        <%= f.date_field :end_date %>
      </div>
      <div class="field">
        <%= f.label :start_time %>
        <%= f.time_select :start_time %>
      </div>
      <div class="field">
        <%= f.label :duration_in_hours%>
        <%= f.number_field :duration, :step => 0.01  %>
      </div>
      <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description %>
      </div>
      <div class="field">
        <%= f.label :vacancy %>
        <%= f.number_field :vacancy %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit class: "ui yellow button"%>
    </div>
  <%end %>
</div>


