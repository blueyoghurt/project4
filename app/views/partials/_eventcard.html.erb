
  <%= @card.inspect %>
<div class="row">
  <div class="ui card">
   <div class="content">
     <div class="header"><%= @card.template.event.name %></div>
     <div class="meta"><%=@card.template.level.description%></div>
   </div>
   <div class="content">
     <div class="description">
       <p><b>Date:</b></p>
       <p><%= @card.template.event.start_date%> to <%= @card.template.event.end_date%> </p>
       <p><b>Start Time:</b> </p>
       <p><%= @card.template.event.start_time %> </p>
       <p><b>Duration:</b></p>
       <p> <%= @card.template.event.duration %> hours</p>
       <p><b>Description:</b></p>
      <p><%= @card.template.event.description %></p>
     </div>
   </div>
 </div>
</div>

<div class="row">
  <%= form_for(@card) do |f| %>
    <div class="actions">
      <% if @card.completion == 0 %>
        <p><b>Status: </b>Draft</p>
        <%= f.file_field :approval, value: "1"%>
        <%= f.submit "Send for Approval", class: "ui yellow button"%>
      <% elsif @card.completion == 1 %>
        <p><b>Status: </b>Waiting for Approval</p>
        <%= f.submit "Waiting for Approval", class: "ui yellow button disabled"%>
      <% elsif @card.completion == 2 %>
        <p><b>Status: </b>Rework required</p>
        <%= f.file_field :approval, value: "1"%>
        <%= f.submit "Send for Approval", class: "ui yellow button"%>
      <% elsif @card.completion == 3 %>
        <p><b>Status: </b>Rework required</p>
        <%= f.submit "Completed", class: "ui green button disabled"%>
      <% end %>
    </div>
  <% end %>

</div>
